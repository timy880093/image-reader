# 本地漫畫閱讀器配置文件範本
# Local Manga Reader Configuration Template
# 
# 使用方法：
# 1. 複製此文件為 config.toml
# 2. 修改以下設定值以符合你的環境

[server]
# 服務器設定
host = "127.0.0.1"          # 服務器主機地址
port = 5000                 # 服務器端口
debug = true                # 開發模式（生產環境請設為 false）
secret_key = "your-secret-key-here-please-change-this"  # 密鑰（請務必更改！）

[manga]
# 漫畫資料夾設定
root_path = "./test_manga"   # 漫畫根目錄路徑
# Windows 範例: "E:/test/manga"
# Linux 範例: "/home/user/manga"

# Gallery 作品資料夾設定
gallery_root_path = "./test_gallery"  # Gallery 作品根目錄路徑
# Windows 範例: "E:/test/gallery"
# Linux 範例: "/home/user/gallery"

[gallery]
# Gallery 閱讀器設定
per_page = 6                    # 每頁顯示數量
search_debounce_ms = 300        # 搜尋防抖延遲（毫秒）
skip_chapters_on_list = true    # 列表頁面是否跳過章節載入（加快速度）
default_filter = ""             # 預設篩選標籤（空字串表示全部）

# 支援的圖片格式
supported_formats = [".jpg", ".jpeg", ".png", ".gif", ".webp", ".bmp", ".tiff"]

# 檔案排序設定
natural_sort = true          # 自然排序（例：1, 2, 10 而非 1, 10, 2）
case_sensitive = false       # 檔案名稱大小寫敏感

# 封面圖片設定
cover_image_priority = [".jpg", ".jpeg", ".png", ".webp", ".gif", ".bmp", ".tiff"]  # 封面圖片格式優先級
show_cover_images = true     # 顯示漫畫封面圖片

[reader]
# 閱讀器界面設定
theme = "dark"              # 主題：dark（深色）或 light（淺色）
auto_hide_toolbar = true    # 自動隱藏工具列
toolbar_hide_delay = 3000   # 工具列隱藏延遲（毫秒）

# 默認閱讀設定
default_zoom = 1.0          # 默認縮放比例
max_zoom = 5.0              # 最大縮放比例
min_zoom = 0.5              # 最小縮放比例
zoom_step = 0.1             # 縮放步進

# 翻頁設定
click_to_turn = true        # 點擊圖片翻頁
keyboard_navigation = true  # 鍵盤導航
show_page_number = true     # 顯示頁碼
show_chapter_info = true    # 顯示章節資訊
allow_wheel_zoom = false    # 允許滾輪縮放圖片（已禁用）

[ui]
# 使用者界面設定
language = "zh-TW"          # 界面語言
responsive_design = true    # 響應式設計

# 主頁設定
grid_columns_desktop = 3    # 桌面版漫畫卡片列數
grid_columns_tablet = 2     # 平板版漫畫卡片列數
grid_columns_mobile = 1     # 手機版漫畫卡片列數
max_chapters_display = 5    # 每本漫畫最多顯示的章節數量

# 搜尋設定
search_placeholder = "搜尋漫畫名稱..."  # 搜尋框提示文字
search_delay = 300          # 搜尋延遲（毫秒）

[performance]
# 效能設定
image_cache = true          # 啟用圖片快取
cache_size_mb = 100         # 快取大小（MB）
preload_pages = 2           # 預載頁面數量
lazy_loading = true         # 延遲載入

# 圖片處理
image_quality = 85          # JPEG 圖片品質（1-100）
resize_large_images = false # 自動縮放大圖片
max_image_width = 1920      # 最大圖片寬度
max_image_height = 1080     # 最大圖片高度
